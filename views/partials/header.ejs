<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <!-- Update the path to include the correct directory -->
    
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .section {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: black;
            color: white;
            font-size: 36px;
            
        }

  
        
        .transparent-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background-color: transparent;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            z-index: 9999;
        }

        .transparent-header ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            font-family: Monaco;
        }

        .transparent-header ul li {
            margin-right: 20px;
        }

        .transparent-header ul li:last-child {
            margin-right: 0;
        }

        .transparent-header ul li a {
            color: #ffffff;
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .transparent-header ul li a:hover {
            color: #aaaaaa;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="transparent-header">
        <nav>
            <ul>
                <li><a href="#Home">Home</a></li>
                <li><a href="#Projects">Project</a></li>
                <li><a href="#Contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Page 1 -->
    <section class="section" id="Home">
        <div class="title-card">
            <h1>Kousha Amouzesh</h1>
        </div>
    </section>

    <!-- Page 2 -->
    <section class="section" id="Projects">
        <div class="title-card">
            <h1>Second Page</h1>
        </div>
    </section>

    <!-- Page 3 -->
    <section class="section" id="Contact">
        <div class="title-card">
            <h1>Third Page</h1>
        </div>
    </section>

    <script>
        // Smooth scroll to a specific section on navigation link click
        const navLinks = document.querySelectorAll('header.transparent-header nav ul li a');
        navLinks.forEach(link => {
            link.addEventListener('click', (event) => {
                event.preventDefault();
                const targetSectionId = link.getAttribute('href');
                const targetSection = document.querySelector(targetSectionId);
                targetSection.scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
